<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Products in Database: <%= @product_count %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories in Database: <%= @category_count %></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>