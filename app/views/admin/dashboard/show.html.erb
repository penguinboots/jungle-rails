<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
          <th>Products in Database : <%= @product_count %></th>
      </thead>
      <tbody>
          <td>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
              </tr>
            <% end %>
          </td>
      </tbody>
    </table>

    <table class="table table-bordered">
      <thead>
          <th>Categories in Database : <%= @category_count %></th>
      </thead>
      <tbody>
          <td>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
              </tr>
            <% end %>
          </td>
      </tbody>
    </table>

  </div>

</section>
